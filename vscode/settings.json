{
  "telemetry.telemetryLevel": "off",

  "window.zoomLevel": 1,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "vsicons.dontShowNewVersionMessage": true,
  "git.openRepositoryInParentFolders": "always",

  "workbench.tree.indent": 10,
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorCustomizations": {
    "editorWhitespace.foreground": "#444"
  },

  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.associations": {
    ".gitaliases": "ini",
    "Makefile.*": "makefile",
    "*.make": "makefile",
    "*.cl": "c",
  },

  "editor.rulers": [ 80 ],
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 4,
  "editor.renderWhitespace": "boundary",
  // "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?-_",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.tokenColorCustomizations": {
    "comments": "#6bba6e",
    "textMateRules": [
      {
        "scope": [
          // "comment",
          "comment.line",
          "comment.block",
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ],
  },

  "extensions.ignoreRecommendations": false,
  "extensions.experimental.affinity": {
    // To improve performance?
    "vscodevim.vim": 1
  },

  "typst-lsp.exportPdf": "never",

  // NOTE:
  // ae ie ii ai af gb aa ia ys ds cs <leader>w gr
  // apt-get install gvfs libglib2.0-bin

  "vim.leader": "<space>",

  "vim.useSystemClipboard": false,
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.easymotion": true,
  "vim.foldfix": true,

  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#a9dcf660",
  "vim.highlightedyank.duration": 250,

  "vim.handleKeys": {
    "<C-d>": false,
    "<C-s>": false,
    "<C-z>": false,
    "<C-y>": false,
    "<C-c>": false,
    "<C-p>": false,
  },

  "vim.normalModeKeyBindings": [
    {
      "before": [ "<leader>", "e" ],
      "commands": [ "workbench.view.explorer" ],
    },
    {
      "before": [ "<leader>", "r", "n" ],
      "commands": [ "editor.action.rename" ],
    },

    {
      "before": [ "<leader>", "h" ],
      "after": [ "^" ]
    },
    {
      "before": [ "<leader>", "l" ],
      "after": [ "g", "_" ]
    },
    {
      "before": [ "<leader>", "m" ],
      "after": [ "8", "0", "|" ]
    },

    {
      "before": [ "g", "h" ],
      "commands": [ "editor.action.showDefinitionPreviewHover" ],
    },
    {
      "before": [ "g", "q" ],
      "commands": [ "editor.action.quickFix" ]
    },
    {
      "before": [ "g", "r" ],
      "commands": [ "editor.action.referenceSearch.trigger" ]
    },

    {
      "before": [ "g", "p", "d" ],
      "commands": [ "editor.action.peekDefinition" ]
    },

    {
      "before": [ "g", "j" ],
      "commands": [ "editor.action.goToImplementation" ]
    },
    {
      "before": [ "g", "p", "j" ],
      "commands": [ "editor.action.peekImplementation" ]
    },

    {
      "before": [ "g", "o" ],
      "commands": [ "editor.action.goToTypeDefinition" ]
    },
    {
      "before": [ "g", "p", "o" ],
      "commands": [ "editor.action.peekTypeDefinition" ]
    },

    {
      "before": [ "g", "p" ],
      "commands": [ "editor.action.marker.prev" ]
    },
    {
      "before": [ "g", "l" ],
      "commands": [ "editor.action.marker.next" ]
    },

    {
      "before": [ "c", "i", "l" ],
      "after": [ "c", "i", "]" ]
    },
    {
      "before": [ "c", "a", "l" ],
      "after": [ "c", "a", "]" ]
    },
    {
      "before": [ "d", "i", "l" ],
      "after": [ "d", "i", "]" ]
    },
    {
      "before": [ "d", "a", "l" ],
      "after": [ "d", "a", "]" ]
    },
    {
      "before": [ "y", "i", "l" ],
      "after": [ "y", "i", "]" ]
    },
    {
      "before": [ "y", "a", "l" ],
      "after": [ "y", "a", "]" ]
    },
    {
      "before": [ "v", "i", "l" ],
      "after": [ "v", "i", "]" ]
    },
    {
      "before": [ "v", "a", "l" ],
      "after": [ "v", "a", "]" ]
    },
    {
      "before": [ "<", "i", "l" ],
      "after": [ "<", "i", "]" ]
    },
    {
      "before": [ ">", "a", "l" ],
      "after": [ ">", "a", "]" ]
    },

    {
      "before": [ "v", "$" ],
      "after": [ "v", "g", "_" ]
    },
  ],

  /*
  // https://rust-analyzer.github.io/manual.html#inlay-hints
  "rust-analyzer.inlayHints.reborrowHints.enable": "never", // always, mutable
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
  "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
  "rust-analyzer.inlayHints.genericParameterHints.lifetime.enable": true,
  "rust-analyzer.inlayHints.expressionAdjustmentHints.enable": "never",
  "rust-analyzer.inlayHints.discriminantHints.enable": "always",
  "rust-analyzer.inlayHints.implicitDrops.enable": true,
  "rust-analyzer.lens.implementations.enable": false,
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.run.enable": false,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.inlayHints.enabled": "off",
  },
  */
}
