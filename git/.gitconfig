[includeIf "gitdir:~/Documents/"]
path = ~/Documents/.gitconfig

[includeIf "gitdir:~/Dada/"]
path = ~/Dada/.gitconfig

[includeIf "gitdir:~/Fafa/"]
path = ~/Fafa/.gitconfig

[core]
excludesfile = ~/.gitignore

[alias]
a = add
s = status
ss = status -s
c = commit
ls = log --decorate --oneline
